extends layout.pug

block content
    .jumbotron
        h1 Moe's Tavern 
        h3 <em>@Springfield, Universal Studios Hollywood</em>
            span
                .col-md-2
                    .thumbnail
                        a(href='https://goo.gl/maps/yjA2ssh1Evo', target='_blank')
                            img(src='/images/display.jpg', alt='Lights', style='width:100%')
        p
            | "Moe's Tavern, or simply called Moe's, is the local tavern in Springfield. The bar is named after its owner: Moe."<br>- <em>Moe</em>
    #menu
        ul
            if pages
                each page in pages
                    li= page
        table.table
            thead.thead-dark
                tr(style='font-size:20px')
                    th No.
                    th
                    th Price
            tbody
                if menu
                    each entry in menu
                        tr.table-active
                            td 
                                p #{entry.id}
                            td 
                                p.col-md-10 #{entry.name}
                                input(type="number" id=entry.id value=1)
                                button.add.col-md-1.btn.btn-default.btn-xs(type='button' alt=entry.id ) +
                            td
                                p $#{entry.price}
