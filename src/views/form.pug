extends layout.pug

block index
    .col-sm-4
    #form.col-sm-4
        if alert
            .alert.alert-danger= alert
        h1.form= pageName
        form(action=`/${form}` method="post")
            if input1
                .input-group
                    span.input-group-addon
                        i.glyphicon.glyphicon-user
                    input.username.form-control(type=input1 name="username" placeholder="Username" required autocomplete="off")
            br
            if input2
                .input-group
                    span.input-group-addon
                        i.glyphicon.glyphicon-envelope
                    input.form-control(type=input2 name="email" placeholder="Email" required autocomplete="off")
            br
            if input3
                .input-group
                    span.input-group-addon
                        i.glyphicon.glyphicon-lock
                    input.password.form-control(type=input3 name="password" placeholder="Password" required autocomplete="off")
            br
            if input4
                .input-group
                    span.input-group-addon
                        i.glyphicon.glyphicon-lock
                    input.passwordConf.form-control(type=input4 name="passwordConf" placeholder="Confirm Password" required autocomplete="off")
            br
            button.btn.btn-default(type="submit") Submit
        .message
        br
        a(href=`/${href}`).col-sm-6 #{linkName} 
        a(href='/').col-sm-6 Home
    .col-sm-4
                        
